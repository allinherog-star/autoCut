{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "expressions.schema.json",
    "$comment": "抽象行为定义：不关心怎么做动画，只关心表达意图",
    "type": "object",
    "properties": {
        "entrances": {
            "$ref": "#/definitions/expressionMap",
            "$comment": "入场行为（出现方式）"
        },
        "exits": {
            "$ref": "#/definitions/expressionMap",
            "$comment": "出场行为（消失方式）"
        },
        "emphasis": {
            "$ref": "#/definitions/expressionMap",
            "$comment": "强调行为（抖动、闪烁等）"
        }
    },
    "definitions": {
        "expressionMap": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/definitions/expression"
            }
        },
        "expression": {
            "type": "object",
            "properties": {
                "semantic": {
                    "type": "string",
                    "$comment": "该行为的语义描述（供 AI 理解）"
                },
                "intensityRange": {
                    "type": "array",
                    "minItems": 2,
                    "maxItems": 2,
                    "items": {
                        "type": "number"
                    },
                    "$comment": "允许的强度范围 [min, max]"
                }
            },
            "additionalProperties": false
        }
    }
}