{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "presets.schema.json",
    "$comment": "视觉模板库：决定长什么样，不决定什么时候出现",
    "type": "object",
    "properties": {
        "textStyles": {
            "type": "object",
            "$comment": "文本 / 花字风格",
            "additionalProperties": {
                "$ref": "#/definitions/textStyle"
            }
        },
        "pipLayouts": {
            "type": "object",
            "$comment": "画中画布局模板",
            "additionalProperties": {
                "$ref": "#/definitions/pipLayout"
            }
        }
    },
    "definitions": {
        "textStyle": {
            "type": "object",
            "properties": {
                "category": {
                    "type": "string",
                    "$comment": "风格分类（综艺 / 信息 / 情绪）"
                },
                "layers": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "$comment": "渲染层次结构"
                },
                "defaultIntensity": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1,
                    "$comment": "默认表现强度"
                }
            },
            "additionalProperties": false
        },
        "pipLayout": {
            "type": "object",
            "properties": {
                "anchor": {
                    "type": "string",
                    "enum": [
                        "top-left",
                        "top-right",
                        "bottom-left",
                        "bottom-right",
                        "center"
                    ],
                    "$comment": "锚点位置"
                },
                "size": {
                    "type": "array",
                    "minItems": 2,
                    "maxItems": 2,
                    "items": {
                        "type": "number"
                    },
                    "$comment": "相对尺寸比例"
                },
                "radius": {
                    "type": "number",
                    "minimum": 0,
                    "$comment": "圆角半径"
                }
            },
            "additionalProperties": false
        }
    }
}