{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "assets.schema.json",
    "$comment": "素材声明区：定义有什么素材，但不定义什么时候用",
    "type": "object",
    "required": [
        "assets"
    ],
    "properties": {
        "assets": {
            "type": "object",
            "$comment": "key 为 assetId，value 为素材描述",
            "additionalProperties": {
                "$ref": "#/definitions/asset"
            }
        }
    },
    "definitions": {
        "asset": {
            "type": "object",
            "required": [
                "type"
            ],
            "$comment": "单个素材定义",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "video",
                        "audio",
                        "image",
                        "text"
                    ],
                    "$comment": "素材类型"
                },
                "src": {
                    "type": "string",
                    "$comment": "媒体文件路径（video/audio/image）"
                },
                "content": {
                    "type": "string",
                    "$comment": "文本内容（仅 text 类型）"
                },
                "editable": {
                    "type": "boolean",
                    "$comment": "用户是否可以修改内容（如字幕文本）"
                },
                "optional": {
                    "type": "boolean",
                    "$comment": "是否为可选素材（可被关闭）"
                },
                "defaultEnabled": {
                    "type": "boolean",
                    "$comment": "默认是否启用"
                },
                "semanticRole": {
                    "type": "string",
                    "$comment": "语义角色（如 background / speaker）"
                },
                "autoReplace": {
                    "type": "boolean",
                    "$comment": "是否允许 AI 自动替换该素材"
                },
                "loop": {
                    "type": "boolean",
                    "$comment": "音频是否循环"
                }
            },
            "additionalProperties": false
        }
    }
}