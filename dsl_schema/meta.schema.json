{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "meta.schema.json",
    "$comment": "项目级元数据，不涉及任何剪辑逻辑",
    "type": "object",
    "required": [
        "projectId",
        "version",
        "fps",
        "resolution",
        "duration"
    ],
    "properties": {
        "projectId": {
            "type": "string",
            "$comment": "项目唯一 ID"
        },
        "version": {
            "type": "string",
            "$comment": "DSL 或项目版本号（建议 semver）"
        },
        "fps": {
            "type": "number",
            "minimum": 1,
            "$comment": "帧率（如 25 / 30）"
        },
        "resolution": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": {
                "type": "integer",
                "minimum": 1
            },
            "$comment": "画布分辨率 [width, height]"
        },
        "duration": {
            "type": "number",
            "minimum": 0,
            "$comment": "视频总时长（秒）"
        },
        "colorSpace": {
            "type": "string",
            "$comment": "色彩空间，如 sRGB / Display-P3"
        },
        "safeArea": {
            "type": "object",
            "$comment": "安全区比例（防止字幕被裁）",
            "properties": {
                "top": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                },
                "bottom": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}