{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "index.schema.json",
    "$comment": "整个多模态智能剪辑 DSL 的入口 Schema，用于校验一个完整项目",
    "type": "object",
    "required": [
        "meta",
        "assets",
        "timeline"
    ],
    "properties": {
        "meta": {
            "$ref": "./meta.schema.json",
            "$comment": "项目级元信息（分辨率、fps、时长等）"
        },
        "assets": {
            "$ref": "./assets.schema.json",
            "$comment": "多模态素材池（视频 / 音频 / 文本 / 图片）"
        },
        "expressions": {
            "$ref": "./expressions.schema.json",
            "$comment": "抽象行为语义库（入场 / 出场 / 强调）"
        },
        "presets": {
            "$ref": "./presets.schema.json",
            "$comment": "视觉风格与布局模板库"
        },
        "timeline": {
            "$ref": "./timeline.schema.json",
            "$comment": "时间轴剪辑语言（核心）"
        }
    },
    "additionalProperties": false
}