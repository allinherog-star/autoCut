{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "timeline.schema.json",
    "$comment": "剪辑中间表示（核心 IR）- 定义视频怎么被剪出来",
    "type": "object",
    "required": [
        "tracks"
    ],
    "properties": {
        "tracks": {
            "type": "array",
            "$comment": "轨道列表",
            "items": {
                "$ref": "#/definitions/track"
            }
        }
    },
    "definitions": {
        "track": {
            "type": "object",
            "required": [
                "id",
                "type",
                "layer",
                "clips"
            ],
            "$comment": "时间轴轨道",
            "properties": {
                "id": {
                    "type": "string",
                    "$comment": "轨道唯一 ID"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "video",
                        "audio",
                        "text",
                        "subtitle",
                        "pip"
                    ],
                    "$comment": "轨道类型"
                },
                "layer": {
                    "type": "integer",
                    "minimum": 0,
                    "$comment": "渲染层级（越大越靠上）"
                },
                "layout": {
                    "$ref": "#/definitions/subtitleLayout",
                    "$comment": "轨道布局（主要用于字幕轨道的安全区/对齐/换行约束）"
                },
                "clips": {
                    "type": "array",
                    "$comment": "该轨道上的剪辑片段",
                    "items": {
                        "$ref": "#/definitions/clip"
                    }
                }
            },
            "additionalProperties": false
        },
        "subtitleLayout": {
            "type": "object",
            "$comment": "字幕专用布局约束（用于保证字幕位置/对齐一致）",
            "properties": {
                "position": {
                    "type": "string",
                    "enum": ["top", "bottom"],
                    "$comment": "字幕区域位置"
                },
                "alignment": {
                    "type": "string",
                    "enum": ["left", "center", "right"],
                    "$comment": "水平对齐"
                },
                "safeArea": {
                    "type": "object",
                    "$comment": "安全区（0-1 比率）",
                    "properties": {
                        "left": { "type": "number", "minimum": 0, "maximum": 0.5 },
                        "right": { "type": "number", "minimum": 0, "maximum": 0.5 },
                        "top": { "type": "number", "minimum": 0, "maximum": 0.5 },
                        "bottom": { "type": "number", "minimum": 0, "maximum": 0.5 }
                    },
                    "additionalProperties": false
                },
                "maxWidth": {
                    "type": "number",
                    "minimum": 0.1,
                    "maximum": 1,
                    "$comment": "字幕最大宽度（占安全区宽度比率）"
                },
                "lineHeight": {
                    "type": "number",
                    "minimum": 0.8,
                    "maximum": 3,
                    "$comment": "行高倍数（相对 fontSize）"
                }
            },
            "additionalProperties": false
        },
        "clip": {
            "type": "object",
            "required": [
                "id",
                "asset",
                "time"
            ],
            "$comment": "剪辑片段（表达实例）",
            "properties": {
                "id": {
                    "type": "string",
                    "$comment": "片段唯一 ID"
                },
                "asset": {
                    "type": "string",
                    "$comment": "引用的 assetId"
                },
                "time": {
                    "$ref": "#/definitions/timeRange",
                    "$comment": "时间范围"
                },
                "expression": {
                    "$ref": "#/definitions/expressionRef",
                    "$comment": "视觉风格引用"
                },
                "behavior": {
                    "$ref": "#/definitions/behavior",
                    "$comment": "行为引用（入场/出场）"
                },
                "transitionOut": {
                    "$ref": "#/definitions/transition",
                    "$comment": "转场（从当前 clip 过渡到同轨道下一个 clip）"
                }
            },
            "additionalProperties": false
        },
        "transition": {
            "type": "object",
            "$comment": "剪辑转场配置（outgoing）",
            "required": ["type", "duration"],
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["fade", "dissolve", "wipe", "slide", "zoom", "blur"],
                    "$comment": "转场类型"
                },
                "duration": {
                    "type": "number",
                    "minimum": 0,
                    "$comment": "转场时长（秒）"
                },
                "easing": {
                    "type": "string",
                    "$comment": "缓动函数（语义级）"
                }
            },
            "additionalProperties": false
        },
        "timeRange": {
            "type": "object",
            "required": [
                "start",
                "end"
            ],
            "$comment": "时间范围（秒）",
            "properties": {
                "start": {
                    "type": "number",
                    "minimum": 0,
                    "$comment": "开始时间"
                },
                "end": {
                    "type": "number",
                    "minimum": 0,
                    "$comment": "结束时间"
                }
            },
            "additionalProperties": false
        },
        "expressionRef": {
            "type": "object",
            "$comment": "视觉风格引用",
            "properties": {
                "preset": {
                    "type": "string",
                    "$comment": "引用 vocabulary.presets 中的预设"
                },
                "intensity": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1,
                    "$comment": "表现强度"
                }
            },
            "additionalProperties": false
        },
        "behavior": {
            "type": "object",
            "$comment": "行为引用（入场/出场）",
            "properties": {
                "enter": {
                    "type": "string",
                    "$comment": "入场行为 ID"
                },
                "exit": {
                    "type": "string",
                    "$comment": "出场行为 ID"
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}